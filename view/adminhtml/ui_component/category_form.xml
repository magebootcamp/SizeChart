<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="size_guide" sortOrder="110">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Size Guide</label>
        </settings>
        <field name="category_size_chart" formElement="select">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Size Chart</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="MageBootcamp\SizeChart\Model\Category\Attribute\Source\SizeChart"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
